{
    "name": "ultralove-theme-collection",
    "displayName": "Ultralove Theme Collection",
    "description": "A sophisticated collection of VS Code themes featuring Black, White, and Blue variants for different coding environments",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Themes"
    ],
    "keywords": [
        "theme",
        "dark",
        "light",
        "black",
        "white",
        "blue",
        "ultralove",
        "color-theme",
        "calming",
        "collection"
    ],
    "contributes": {
        "themes": [
            {
                "label": "Ultralove Black",
                "uiTheme": "vs-dark",
                "path": "./themes/ultralove-black-color-theme.json"
            },
            {
                "label": "Ultralove White",
                "uiTheme": "vs",
                "path": "./themes/ultralove-white-color-theme.json"
            },
            {
                "label": "Ultralove Blue",
                "uiTheme": "vs-dark",
                "path": "./themes/ultralove-blue-color-theme.json"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ultralove/vscode-theme"
    },
    "author": {
        "name": "Ultralove"
    },
    "license": "MIT",
    "publisher": "ultralove",
    "scripts": {
        "build": "vsce package --out ./dist/",
        "install-local": "code --install-extension ./dist/*.vsix",
        "validate": "vsce package --out ./dist/ --no-dependencies"
    },
    "devDependencies": {
        "@vscode/vsce": "^2.19.0"
    }
}
